{# app/Resources/views/default/verificar.html.twig #}
{% extends '/default/cuestionariobase.html.twig' %}

{% block body %}
	<div class="well well-lg">
		<p class="no-margin">Por favor, antes de enviar el cuestionario verifique sus respuestas. Una vez enviado no podr&aacute; realizar modificaciones.</p>
	</div>
	<ul class="nav nav-tabs" id="myTabs" role="tablist">
		<li role="presentation" class="active"><h2 id="home-tab"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> CUESTIONARIO CUANTITATIVO</h2></li>
	</ul>						
	<div class="tab-content" id="myTabContent">
		<div class="tab-pane fade in active" role="tabpanel" id="home" aria-labelledby="home-tab">
			<div class="form-horizontal form-resultados">
					
				{% include 'preguntas/delphiResult.html.twig' with {'titulo': titulos.1, 'numero': '1', 'form': form.p1, 'formporque': form.p1porque} %}								
				
				{% include 'preguntas/delphiResult.html.twig' with {'titulo': titulos.2, 'numero': '2', 'form': form.p2, 'formporque': form.p2porque} %}
				
				{% include 'preguntas/delphiResult.html.twig' with {'titulo': titulos.3, 'numero': '3', 'form': form.p3, 'formporque': form.p3porque} %}

				<div class="form-block button-block">
					<!-- Button (Double) -->
					<div class="form-group" style="margin-bottom:0;">
						<div class="col-xs-12 col-md-8 show-grid">
							<a href="guardar-delphi" class="col-xs-12 col-sm-12 btn btn-success btn-lg">Enviar formulario</a>
						</div>
						<div class="col-xs-12 col-md-4">
							<button id="button2id" name="button2id" onclick="goBack();"class="col-xs-12 col-sm-12 btn btn-danger" style="margin-top: 6px;">Volver</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{% block modals %}
	
		<!-- Modal Submit-->
		<div class="modal fade modal-enviar" id="ModalSubmit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-keyboard="false" data-backdrop="static">
			<div class="modal-dialog modal-sm" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h3 class="modal-title" id="myModalLabel">&iexcl;Enviando formulario!</h3>
					</div>
					<div class="modal-body">
						<div class="progress">
							<div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:100%">
								<span class="sr-only">40% Complete (success)</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>	
	
	{% endblock %}
 <script>
	function goBack() {
    	window.history.back();
	}
</script>

{% endblock %}