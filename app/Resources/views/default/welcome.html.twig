			<div class="form-block button-block">
				<!-- Button (Double) -->
				<div class="form-group" style="margin-bottom:0;">
					<div class="col-xs-12 col-md-6 show-grid">
						<p class="text-center" style="margin-top:20px;"><strong>Disponible del 23 al 5 de febrero</strong></p>
						{{ button1 | convert_encoding('UTF-8', ' iso-8859-1') | raw }}					
					</div>
					<div class="col-xs-12 col-md-6" style="margin-top:20px;">
						<p class="text-center"><strong>Disponible pr&oacute;ximamente</strong></p>
						{{ button2 | convert_encoding('UTF-8', ' iso-8859-1') | raw }}
					</div>
				</div>
			</div>								
		</div>
		<div class="tab-pane fade" role="tabpanel" id="profile" aria-labelledby="profile-tab">
